<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net5.0-windows</TargetFramework>
    <Nullable>enable</Nullable>
    <UseWPF>true</UseWPF>
    <GeneratePackageOnBuild>True</GeneratePackageOnBuild>
	<EnableDynamicLoading>true</EnableDynamicLoading>
    <Description>This plugin has its own main window which is not docked into the Editor's layout.</Description>
    <Copyright>AutomationML 2022</Copyright>
	<Version>1.0.0</Version>
    <RepositoryUrl>https://github.com/AutomationML/AMLEditorPlugin</RepositoryUrl>
	  <PackageTags>AMLEditorPlugin; AutomationML</PackageTags>
	  <PackageIcon>AML.png</PackageIcon>
	  <BaseOutputPath>$(SolutionDir)build\Plugins\$(MSBuildProjectName)</BaseOutputPath>
	  <PackageReleaseNotes>First version compatible with AutomationML Editor version 6.0</PackageReleaseNotes>
	  <PackageLicenseExpression>MIT</PackageLicenseExpression>
  </PropertyGroup>

  <ItemGroup>
    <None Remove="AML.png" />
    <None Remove="Plugin.png" />
  </ItemGroup>

  <ItemGroup>
	  <PackageReference Include="Aml.Editor.Plugin.Contract" Version="3.0.6">
		  <Private>false</Private>
		  <ExcludeAssets>runtime</ExcludeAssets>
	  </PackageReference>
    <PackageReference Include="Aml.Engine" Version="2.0.7">
		<Private>false</Private>
		<ExcludeAssets>runtime</ExcludeAssets>
	  </PackageReference>
    <PackageReference Include="Aml.Skins" Version="1.0.4">
		<Private>false</Private>
		<ExcludeAssets>runtime</ExcludeAssets>
	  </PackageReference>
    <PackageReference Include="Aml.Toolkit" Version="3.0.4">
		<Private>false</Private>
		<ExcludeAssets>runtime</ExcludeAssets>
	  </PackageReference>
    <PackageReference Include="MahApps.Metro" Version="2.4.9">
		<Private>false</Private>
		<ExcludeAssets>runtime</ExcludeAssets>
	  </PackageReference>
    <PackageReference Include="System.ComponentModel.Composition" Version="6.0.0">
		<Private>false</Private>
		<ExcludeAssets>runtime</ExcludeAssets>
	  </PackageReference>
  </ItemGroup>

  <ItemGroup>
    <Resource Include="AML.png">
      <Pack>True</Pack>
      <PackagePath>\</PackagePath>
    </Resource>
    <Resource Include="Plugin.png" />
  </ItemGroup>

</Project>
